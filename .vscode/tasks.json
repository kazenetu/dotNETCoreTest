{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "runner": "terminal",
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "${workspaceRoot}/ConsoleApp/ConsoleApp.csproj"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args": [
                "${workspaceRoot}/ConsoleApp.Test/ConsoleApp.Test.csproj"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        }
    ]
    // ,"windows": {  // Windows固有の設定
    //     "command": "cmd", // cmd.exeを実行
    //     "args": [ "/C", "chcp 65001 && dotnet"] // /Cオプションで第二引数のコマンドを実行
    // }                                          // chcp 65001 の後に && で続けてdotnetを実行するよう指定
}